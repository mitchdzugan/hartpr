<!DOCTYPE html>
<html>

	<head>
		<title>Hart PR</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="/static/headertable.css??id={{timestamp}}">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	</head>

	<body>
		<div class="header" id="grad"><span><a href="{{url_for('index')}}" id="logo">&#9825;PR</a></span></div>
			<nav class="navbar navbar-inverse navbar-static-top">
 			<div class="container-fluid" id="main">
    			<div class="navbar-header">
    				<a class="navbar-brand" href="{{url_for('index')}}">&#9825;PR</a>
  				</div>
 		    	<ul class="nav navbar-nav">
					<li><a href="{{url_for('index')}}">Ranking</a></li>
					<li id="active"><a href="{{url_for('tournaments')}}">Tournaments</a></li>
					<li><a href="{{url_for('searchh2h')}}">Head2Head</a></li>
					<li><a href="{{url_for('submit_form_unsubmitted')}}">Request Changes</a></li>
					<li><a class="right_most" href="{{url_for('about')}}">About</a></li>
					<li><a href="{{url_for('login')}}">Admin</a></li>
    			</ul>
				<form class="navbar-form" role="search" action="{{ url_for('search') }}">
					<div class="input-group">
						<input type="text" class="form-control" placeholder="Search for player..." name="Player" id="srch-term" list="player_names">
							<datalist id="player_names">
								{% for player in players %}
									<option value="{{player[1]}}">
								{% endfor %}
							</datalist>
						<div class="input-group-btn">
					<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
						</div>
					</div>
				</form>
 			 </div>	
		</nav>


		<div class="left_align">
		<h1> {{information["name"]}} </h1>
		<h2><a href="{{information['url']}}">{{information["url"]}}</a></h2>
		<h4> {{information["calendar_date"]}} </h4>
		<table class="table table-striped" style="width: 20%;float: left;">
		<tr class="table_header">
			<th>Players</th>
		</tr>
		{% for player in players %}
			<tr>
			<td><a href="{{url_for('player', player_id=player[1])}}">{{player[0]}}</a></td>
			</tr>
		{% endfor %}
		</table>
		<table class="table table-striped" style="width: 70%;float: right">
		<tr class="table_header">
			<th>Winner</th>
			<th>Score</th>
			<th>Loser</th>
		</tr>
		{% for set in sets %}
			<tr>
				<td>
				<a href="{{url_for('player', player_id=set[0][1])}}">
				{{set[0][0]}}
				</a>
				</td>
				<td>{{set[2]}}</td>
				<td>
				<a href="{{url_for('player', player_id=set[1][1])}}">
				{{set[1][0]}}</a></td>
			</tr>
		{% endfor %}
		</table>
		</div>
	</body>
</html>

